FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/coolant";
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 2 -3 0 0 0 0 ];

internalField   uniform 0.03;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0.03;
    }
    parede
    {
        type            symmetry;
    }
    outlet
    {
        type            zeroGradient;
        value           uniform 0;
    }
    coolant_to_cladding
    {
        type            compressible::epsilonWallFunction;
        value           uniform 0.03;
    }
}


